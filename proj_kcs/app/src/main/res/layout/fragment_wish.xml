<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.francisco.proj_kcs.FilterFragment">

    <ScrollView
        android:id="@+id/ScrollView03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wishProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_favorite_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/TextHome"
                android:fontFamily="@font/quicksand"
                android:text="@string/favorites"
                android:textColor="@color/TextHome"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/wishListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wishProducts"
                android:translationX="0dp">
            </ListView>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
